<!-- ユーザーの詳細 -->
<div class="container">
  <div class="row">
    <div class="col-md-3 ">
      <h2>User info</h2>
       <%= image_tag @user.get_profile_image(100,100) %>
      <table>
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %><th>
          </tr>
        </tbody>
      </table>

      <% if @user == current_user %>

      <%= link_to edit_user_path(current_user.id),  class:"btn btn-outline-secondary btn-block" do %>
       <i class="fas fa-user-cog"></i>  <% end %>
       <% end %>


       <h2>New book</h2>

        <%= form_with model: @book  ,method: :post do |f| %>



        <h4>Title</h4>
        <%= f.text_field :title %>
       <h4>Opinion</h4>
        <%= f.text_area :body %>
       <%= f.submit 'Create Book' ,class: 'btn btn-success' %>

        <% end %>

    </div>
<div class="col-md-8 offset-md-1">

<h2>Books</h2>


<table class="table">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Opinion</th>


    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>   <%= image_tag book.get_image %>  </td>
      <td><%= book.title %></td>
      <td><%= book.body %></td>

    </tr>
  <% end %>

  </tbody>
</table>
</div>
</div>
</div>